#Q1

input1 = input('Enter an integer.')
input2 = input('Enter another integer.')
input3 = input('Enter another integer.')
number1 = int(input1)
number2 = int(input2)
number3 = int(input3)
sum_of_numbers = number1 + number2 + number3
mean_of_numbers = ("%.2f" % (sum_of_numbers / 3))
mult_of_numbers = ("%d" % (number1 * number2 * number3))
print('Sum:', sum_of_numbers, 'Mean:', mean_of_numbers, 'Mult:', mult_of_numbers)

#Q2

A = int(input('principal'))
i = int(input('interest rate'))
n = int(input('duration'))
S = (A * (1 + i / 100) ** n)
print("%.2f" % S)

#Q3

import math
s_radius = input('What\'s the radius of the circle?')
m = float(s_radius)
perimeter_of_circle = (2 * math.pi * m)
surface_of_circle = (math.pi * m ** 2)
print("%.10f" % perimeter_of_circle, "%.10f" % surface_of_circle)

#Q4

num = int(input('Enter a number.'))
# num * (num + 1) / 2
sum_to_num = num * (num + 1) / 2
print(int(sum_to_num))

