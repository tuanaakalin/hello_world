#Q6

a = int(input("Please enter the first number: "))
b = int(input("Please enter the second number: "))
# Version 1 (Classic Swap):
temp = a
a = b
b = temp
print("Here they are inversed: " + str(a) + " " + str(b))

#Q7

ch = (input("Enter a character: "))
print("The ascii value of " + ch + " is: " + str(ord(ch)))

#Q8

letter = input('Enter a lowercase letter.')
print(letter.capitalize())

#way of teacher
ll = input("Plese enter a lowercase letter: ")
ul = chr(ord(ll) + ord("A") - ord("a"))
print("Here is the upparcase version: " + ul)

#Q9

import math
radius = int(input('Enter a radius.'))
print("%.9f" % ((4 / 3) * math.pi * radius ** 3))

#10

year = int(input('year'))
month = int(input('month'))
day = int(input('day'))
hour = int(input('hour'))
min_ = int(input('min'))
a = 60
b = 60
c = 24
d = 30
e = 12
print(min_ * a + hour * b ** 2 + day * c * b ** 2 + month * d * c * b ** 2 + year * e * d * c * 60 ** 2)

#Q11

a = int(input('number1'))
b = int(input('number2'))
c = int(input('number3'))
print(a * (a % 2) + b * (b % 2) + c * (c % 2))
